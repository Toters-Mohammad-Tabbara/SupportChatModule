<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="bottom"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.toters.twilio_chat_module.widgets.CustomTextView
            android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/black"
            app:arabicFont="@string/noto_arabic_semi_bold"
            app:arabicFontSize="16"
            app:englishFont="@string/noto_semi_bold"
            app:englishFontSize="15" />

        <ImageView
            android:id="@+id/circleOne"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/bg_circle_gray"
            android:layout_marginBottom="6dp"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/circleTwo"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/bg_circle_gray"
            android:layout_marginBottom="6dp"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/circleThree"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/bg_circle_gray"
            android:layout_marginBottom="6dp"
            app:tint="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>